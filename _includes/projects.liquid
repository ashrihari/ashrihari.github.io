<div class="col">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        <div class="col-md-4">
          {% if project.img contains '.mp4' or project.img contains '.webm' or project.img contains '.mov' or project.video %}
            <video 
              src="{% if project.video %}{{ project.video | relative_url }}{% else %}{{ project.img | relative_url }}{% endif %}" 
              class="card-img" 
              autoplay 
              loop 
              muted 
              playsinline 
              style="object-fit: contain; width: 100%; height: 100%; max-height: 300px;"
            ></video>
          {% elsif project.img %}
            {%
              include figure.liquid
              loading="eager"
              path=project.img
              sizes = "250px"
              alt="project thumbnail"
              class="card-img"
              style="object-fit: contain; width: 100%; height: 100%; max-height: 300px;"
            %}
          {% endif %}
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h2 class="card-title">{{ project.title }}</h2>
            <p class="card-text">{{ project.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if project.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if project.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ project.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
              {% if project.website %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Project Website">
                    <a href="{{ project.website }}">Website</a>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
